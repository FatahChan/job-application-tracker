{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "{{chrome}}.permissions": ["sidePanel"],
  "{{chrome}}.action": {
    "default_title": "Click to open panel"
  },
  "{{chrome}}.side_panel": {
    "default_path": "src/index.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.js"
  }
}
